extends layout

block content

    h1=title 

    .form
        form(method='POST')
            label(for='username') Name:
            input(type='text', placeholder='username' name='username' required)
            label(for='password') Password:
            input(type="password", name="password", required)

            if errors
                .errors
                ul
                    for error in errors
                        li= error.msg

            button(type='submit') Sign Up
